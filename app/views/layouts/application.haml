	%head
		%title IkWeb
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#wrap
			#header
				#brand
					#logo EnrollMint™
					#tagline Enroll Customers. Make a Mint.
				#tag
